generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  icon        String
  imageUrl    String?
  description String
  features    String[]
  tag         String?
  contactLink String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pricingTiers PricingTier[]
}

model PricingTier {
  id           String  @id @default(cuid())
  duration     String
  requestLimit String
  price        Int
  isPopular    Boolean @default(false)
  productId    String
  product      Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Bill {
  id          String   @id @default(cuid())
  imageUrl    String
  date        String
  description String?
  createdAt   DateTime @default(now())
}
